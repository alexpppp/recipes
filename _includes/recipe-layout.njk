---
layout: base.njk
---
<div class="page-wrapper">
    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="{{ '/' | url }}">
                <span class="icon is-large is-left has-text-success">
                    <i class="fas fa-2x fa-home"></i>
                </span>
            </a>
            <div class="navbar-item">
            <button id="wake-toggle" class="button is-small is-light">
              <span class="icon"><i class="fas fa-moon"></i></span>
              <span>Keep Awake</span>
            </button>
          </div>
        </div>
    </nav>
    <main class="has-background-light">
        <section class="section">
          <div class="container is-max-desktop p-6-desktop">
            <!-- Title -->
            <h1 class="title">{{ title }}</h1>
             <!-- Meta Info (Time, Servings, Tags) -->
            <div id="recipe-meta" class="columns is-mobile is-multiline is-variable is-1">
              {% if time %}
              <div class="column is-narrow">
                <span class="icon"><i class="fas fa-clock"></i></span> 
                <span>{{ time }}</span>
              </div>
              {% endif %}
              {% if servings %}
              <div class="column is-narrow">
                <span class="icon"><i class="fas fa-user-friends"></i></span> 
                <span>{{ servings }} servings</span>
              </div>
              {% endif %}
              {% if tags %}
              <div class="column is-full">
                <div class="tags are-medium">
                  {% for tag in tags %}
                    {% if tag != "recipe" %}
                      <span class="tag is-primary is-light">{{ tag[0] | upper }}{{ tag.slice(1) }}</span>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
              {% endif %}
            </div>
            <!-- Image -->
            {% if imgFile %}
            <figure class="image is-3by2 mb-5">
              <img src="{{ ('/img/' + imgFile) | url }}" alt="Photo of {{ title }}">
            </figure>
            {% endif %}
            <div class="content">
            {% if source %}
            <blockquote>{{ source }}</blockquote>
            {% endif %}
            <!-- Ingredients and Instructions -->
              {% if ingredients %}
              <h2 class="subtitle is-4"><span class="icon"><i class="fas fa-spoon"></i></span> Ingredients</h2>
                <ul>
                <div class="has-text-weight-light">
                  {% for item in ingredients %}
                    <li>{{ item }}</li>
                  {% endfor %}
                  </div>
                </ul>
              {% endif %}
              {% if icing %}
              <h2 class="subtitle is-5">Icing</h2>
                <ul>
                <div class="has-text-weight-light">
                  {% for item in icing %}
                    <li>{{ item }}</li>
                  {% endfor %}
                  </div>
                </ul>
              {% endif %}
              {% if topping %}
              <h2 class="subtitle is-5">To Top</h2>
                <ul>
                <div class="has-text-weight-light">
                  {% for item in topping %}
                    <li>{{ item }}</li>
                  {% endfor %}
                  </div>
                </ul>
              {% endif %}
              <h2 class="subtitle is-4"><span class="icon"><i class="fas fa-list-check"></i></span> Method</h2>
                <ol>
                  {% for step in method %}
                    <li class="mb-3">{{ step }}</li>
                  {% endfor %}
                </ol>
            </div>
          </div>
        </section>
      </main>
      <script>
  let wakeLock = null;
  const wakeButton = document.getElementById('wake-toggle');
  let wakeActive = false;
  async function requestWakeLock() {
    try {
      wakeLock = await navigator.wakeLock.request('screen');
      wakeActive = true;
      updateButton(true);
      wakeLock.addEventListener('release', () => {
        wakeActive = false;
        updateButton(false);
        console.log('Wake Lock released');
      });
      console.log('Wake Lock active');
    } catch (err) {
      console.error(`Wake Lock error: ${err.name}, ${err.message}`);
    }
  }
  function releaseWakeLock() {
    if (wakeLock !== null) {
      wakeLock.release();
      wakeLock = null;
    }
  }
  function updateButton(active) {
    if (active) {
      wakeButton.classList.add('is-success');
      wakeButton.classList.remove('is-light');
      wakeButton.querySelector('.icon i').classList.replace('fa-moon', 'fa-sun');
      wakeButton.querySelector('span:nth-child(2)').textContent = 'Awake';
    } else {
      wakeButton.classList.remove('is-success');
      wakeButton.classList.add('is-light');
      wakeButton.querySelector('.icon i').classList.replace('fa-sun', 'fa-moon');
      wakeButton.querySelector('span:nth-child(2)').textContent = 'Keep Awake';
    }
  }
  // Re-acquire on visibility change
  document.addEventListener('visibilitychange', () => {
    if (wakeActive && document.visibilityState === 'visible') {
      requestWakeLock();
    }
  });
  // Toggle wake lock on button click
  wakeButton.addEventListener('click', () => {
    if (wakeActive) {
      releaseWakeLock();
    } else {
      requestWakeLock();
    }
  });
</script>
</div>